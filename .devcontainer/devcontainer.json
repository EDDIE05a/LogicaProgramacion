{
  "name": "Kotlin Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/java:0-17",
  "customizations": {
    "vscode": {
      "extensions": [
        "fwcd.kotlin",
        "formulahendry.code-runner"
      ]
    }
  },
  "postCreateCommand": "sdk install kotlin && echo 'export PATH=/usr/local/sdkman/candidates/kotlin/current/bin:$PATH' >> /etc/bash.bashrc"
}
